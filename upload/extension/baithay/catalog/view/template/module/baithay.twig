<div class="container my-5">
  <h3 class="mb-4">Custom Featured Products</h3>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 g-3">
    {% for product in products %}
      <div class="col">
        <div class="card h-100 shadow-sm">
          <a href="{{ product.href }}">
            <img src="{{ product.thumb }}" class="card-img-top p-3" alt="{{ product.name }}">
          </a>
          <div class="card-body text-center">
            <h5 class="card-title">
              <a href="{{ product.href }}" class="text-decoration-none text-dark">{{ product.name }}</a>
            </h5>
            {% if product.price %}
              <p class="card-text fw-bold text-danger fs-5">{{ product.price }}</p>
            {% endif %}
            <div class="d-grid">
              <button type="button" class="btn btn-primary" onclick="addToCart({{ product.product_id }})">
                <i class="fa-solid fa-shopping-cart"></i> Buy Now
              </button>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<script>
function addToCart(product_id) {
    fetch('index.php?route=checkout/cart.add&language={{ config_language }}', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
        },
        body: 'product_id=' + product_id + '&quantity=1'
    })
    .then(response => response.text())
    .then(text => {
        const data = JSON.parse(text);
        if (data.success) {
           
            location.reload();
        } else if (data.error) {
            alert(data.error);
        }
    })
    .catch(error => {
        console.error('Error:', error);
    });
}
</script>